[32m+[m[32mdef matrix_rain():[m
[32m+[m[32m    """Create a Matrix-style digital rain animation"""[m
[32m+[m[32m    width = 60[m
[32m+[m[32m    height = 20[m
[32m+[m[32m    chars = "01"[m
[32m+[m[41m    [m
[32m+[m[32m    # Create initial columns with random characters[m
[32m+[m[32m    columns = [[' ' for _ in range(height)] for _ in range(width)][m
[32m+[m[32m    speeds = [random.uniform(0.1, 0.3) for _ in range(width)][m
[32m+[m[32m    positions = [random.randint(-height, 0) for _ in range(width)][m
[32m+[m[41m    [m
[32m+[m[32m    start_time = time.time()[m
[32m+[m[32m    while time.time() - start_time < 3:  # Run for 3 seconds[m
[32m+[m[32m        clear_screen()[m
[32m+[m[41m        [m
[32m+[m[32m        # Update each column[m
[32m+[m[32m        for i in range(width):[m
[32m+[m[32m            positions[i] += speeds[i][m
[32m+[m[32m            if positions[i] >= height:[m
[32m+[m[32m                positions[i] = random.randint(-height, 0)[m
[32m+[m[32m                speeds[i] = random.uniform(0.1, 0.3)[m
[32m+[m[41m            [m
[32m+[m[32m            # Fill the column with characters[m
[32m+[m[32m            for j in range(height):[m
[32m+[m[32m                if 0 <= j - int(positions[i]) < random.randint(5, 15):[m
[32m+[m[32m                    columns[i][j] = random.choice(chars)[m
[32m+[m[32m                else:[m
[32m+[m[32m                    columns[i][j] = ' '[m
[32m+[m[41m        [m
[32m+[m[32m        # Print the matrix rain[m
[32m+[m[32m        print(f"{Fore.GREEN}", end="")[m
[32m+[m[32m        for j in range(height):[m
[32m+[m[32m            line = ""[m
[32m+[m[32m            for i in range(width):[m
[32m+[m[32m                line += columns[i][j][m
[32m+[m[32m            print(f"    {line}")[m
[32m+[m[41m        [m
[32m+[m[32m        time.sleep(0.1)[m
[32m+[m
